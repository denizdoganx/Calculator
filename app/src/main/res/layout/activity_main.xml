<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="false"

    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <GridLayout
            android:id="@+id/generalHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4"
            app:layout_constraintBottom_toTopOf="@+id/lastRow"
            tools:layout_editor_absoluteX="1dp">

            <Button

                android:id="@+id/c"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="AC"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="0">

            </Button>

            <Button

                android:id="@+id/signConverter"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="+/-"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="0">

            </Button>

            <Button

                android:id="@+id/percentage"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="%"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_row="0">

            </Button>

            <Button
                android:id="@+id/slash"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="/"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_row="0"></Button>


            <Button
                android:id="@+id/seven"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="7"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="1">

            </Button>

            <Button
                android:id="@+id/eight"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="8"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="1">

            </Button>

            <Button
                android:id="@+id/nine"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="9"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_row="1">

            </Button>

            <Button
                android:id="@+id/times"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="X"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_row="1"></Button>


            <Button
                android:id="@+id/four"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="4"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="2">

            </Button>

            <Button
                android:id="@+id/five"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="5"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="2">

            </Button>

            <Button
                android:id="@+id/six"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="6"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_row="2">

            </Button>

            <Button
                android:id="@+id/minus"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="-"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_row="2"></Button>


            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="1"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="3">

            </Button>

            <Button
                android:id="@+id/two"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="2"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_row="3">

            </Button>

            <Button
                android:id="@+id/three"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="3"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_row="3">

            </Button>

            <Button
                android:id="@+id/plus"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="+"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_row="3"></Button>

        </GridLayout>

        <LinearLayout
            android:id="@+id/lastRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/zero"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/point"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="."
                android:textAlignment="center"
                android:textSize="24sp"></Button>

            <Button
                android:id="@+id/equal"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:onClick="actionPerformed"
                android:text="="
                android:textAlignment="center"
                android:textSize="24sp"></Button>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="parent"

        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/detailsOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="190 x 5 = 950"
            android:textAlignment="textEnd"
            android:textColor="@color/cardview_light_background"
            android:textSize="24sp"></TextView>

        <TextView
            android:id="@+id/bigNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="250"
            android:textAlignment="textEnd"
            android:textColor="@color/cardview_light_background"
            android:textSize="84sp">


        </TextView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>